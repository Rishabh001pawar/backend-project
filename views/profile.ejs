<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Post</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div
      class="w-full min-h-screen bg-zinc-900 flex flex-col items-center justify-center p-8"
    >
      <a href="/logout" class="text-white bg-red-500 rounded-md px-4 py-2 mb-4"
        >Logout</a
      >
      <h3 class="text-3xl mb-5 text-white">
        <span class="font-bold">Hello</span>, <%= user.name %>
      </h3>

      <h5 class="text-lg text-zinc-300 mb-4">You can create a new post</h5>

      <form method="post" action="/post" class="w-full max-w-lg">
        <textarea
          name="content"
          placeholder="Write your post here..."
          class="resize-none bg-transparent border-2 border-zinc-700 text-white w-full h-32 rounded-md outline-none px-3 py-2 mb-4"
        ></textarea>

        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded-md"
        >
          Create New Post
        </button>
      </form>
      <div class="posts mt-20">
        <h3 class="text-3xl mb-5 text-white">Your Posts</h3>
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="resize-none bg-transparent mb-2 border-2 border-zinc-700 text-white w-full rounded-md outline-none px-3 py-2 mb-4"
          >
            <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
            <p>
              <%= post.content %>
            </p>
            <small class="mt-4"><%= post.likes.length %></small>
            <div class="btns flex mt-5">
              <a class="text-blue-500 hover:underline" href="/like/<%= post._id %>">
                <%= post.likes.indexOf(user._id) === -1 ? 'Like' : 'Unlike' %>
              </a>
              <a href="/edit/<%= post._id %>" class="text-red-500 hover:underline ml-5">Edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
